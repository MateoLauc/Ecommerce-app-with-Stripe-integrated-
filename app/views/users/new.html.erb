<div style="text-align: center">

	 <h1>Registriraj se</h1>
  <%= form_for(:korisnik, :url => {:controller => 'users', :action => 'create'}) do |f| %>
    <p> Username:</br> <%= f.text_field :ime%> </p>
     <p> Prezime:</br> <%= f.text_field :prezime%> </p>
    <p> Email:</br> <%= f.text_field :email%> </p>
    <p> Password:</br> <%= f.password_field :password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
    <%= f.submit :Registriraj %>
  <% end %> 
  <% if @korisnik.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @korisnik.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
<% end %>
</div>

