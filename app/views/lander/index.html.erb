				  <% end %>
			</ul>
			
		</div>
		</div>
	</div>

		<div id="myCarousel" class="carousel slide" data-ride="carousel" >
	 
		 		<ol class="carousel-indicators">
				      <li class="item1 active"></li>
				      <li class="item2"></li>
				      <li class="item3"></li>
				      <li class="item4"></li>
		   		 </ol>

	   		  <!-- Omotač za slike -->
	    	<div class="carousel-inner" role="listbox">
	    		<div class="item active">
	    			<img class="img-responsive" src="assets/slika1.jpg">
	    		</div>
	    			<div class="item ">
	    			<img class="img-responsive" src="assets/slika2.jpg">
	    		</div>
	  			<div class="item ">
